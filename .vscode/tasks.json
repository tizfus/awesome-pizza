{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create migration",
            "command": "dotnet-ef",
            "type": "process",
            "args": [
                "migrations",
                "add", "${input:migrationName}",
                "--project", "${workspaceFolder}/AwesomePizza.Persistence",
                "--startup-project", "${workspaceFolder}/AwesomePizza.API",
            ],

            "group": "build"
        },
        {
            "label": "Run tests",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "-v","q",
                "1>", "/dev/null"
            ],

            "group": "test",
            
        },
        {
            "label": "Run API",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project", "${workspaceFolder}/AwesomePizza.API",
                "--launch-profile", "staging"
            ],

            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "description": "name of the migration to create",
            "type": "promptString"
        }
    ]
}